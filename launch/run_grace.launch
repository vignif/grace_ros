  <launch>
  <!-- which_cam:={usb_cam|realsense} -->
    <arg name="which_cam" default="usb_cam"/>
    <group if="$(eval which_cam == 'usb_cam')">
      <node name="camera" pkg="usb_cam" type="usb_cam_node" output="screen" >
        <param name="video_device" value="/dev/video0" />
        <param name="image_width" value="640" />
        <param name="image_height" value="480" />
        <param name="pixel_format" value="yuyv" />
        <param name="camera_frame_id" value="camera_link" />
        <param name="io_method" value="mmap"/>

        <remap from="/camera/image_raw" to="/camera/color/image_raw"/>
        <remap from="/camera/camera_info" to="/camera/color/camera_info"/>
      </node>
    </group>   

    <group if="$(eval which_cam == 'realsense')">
      <include file="$(find realsense2_camera)/launch/rs_camera.launch">
        <arg name="device_type" value="d435"/>
      </include>
    </group>   

    <node name="server" pkg="grace_ros" type="server.py" respawn="false" output="screen" args="--venv ~/ros_ws_deploy/venv_grace_deploy/bin/activate" />
    <node name="client" pkg="grace_ros" type="client-hri.py" respawn="false" output="screen"/>

    <include file="$(find hri_face_detect)/launch/detect.launch">
      <arg name="face_mesh" value="False"/>
    </include>
    
    <!-- <node pkg="rviz" type="rviz" name="rviz" args="-d $(find grace_ros)/cfg/eng_config.rviz"/> -->
    <!-- <node name="plot_eng" type="rqt_plot" pkg="rqt_plot" args="/engagement" /> -->
  </launch>